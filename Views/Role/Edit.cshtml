@model RoleViewModel

@{
    ViewBag.Title = "Edit Role";
	var statusList = ViewData["Status"] as List<NameIdPair>;
    var statusListSelect = new SelectList(statusList, "Id", "Name");
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
		<label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
        </div>
	</div>
	<div class="form-group row">
		<label asp-for="CurrentStatusId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
		    <select asp-for="CurrentStatusId" asp-items="statusListSelect" class="custom-select">  
			    <option value="">Choose Status</option>  
		    </select>
		    <span asp-validation-for="CurrentStatusId" class="text-danger"></span>
        </div>
	</div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>