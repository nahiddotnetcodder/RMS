@model RMS.Models.StoreIGen
@{
    ViewData["Title"] = "Store & Inventory > Maintenance > Item Generation > Create Item Generation";
}
<h6 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">
                <label asp-for="SCId" class="control-label"></label>
                <select asp-for="SCId" class="form-control" asp-items="ViewBag.StoreCategory"></select>
                <span asp-validation-for="SCId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SSCId" class="control-label"></label>
                <select asp-for="SSCId" class="form-control" asp-items="ViewBag.StoreSCategory"></select>
                <span asp-validation-for="SSCId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SUId" class="control-label"></label>
                <select asp-for="SUId" class="form-control" asp-items="ViewBag.StoreUnits"></select>
                <span asp-validation-for="SUId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SIGItemCode" class="control-label"></label>
                <input asp-for="SIGItemCode" class="form-control" readonly/>
                <span asp-validation-for="SIGItemCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SIGItemName" class="control-label"></label>
                <input asp-for="SIGItemName" class="form-control" />
                <span asp-validation-for="SIGItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SIGRLevel" class="control-label"></label>
                <input asp-for="SIGRLevel" class="form-control" value=""/>
                <span asp-validation-for="SIGRLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SIGRemarks" class="control-label"></label>
                <textarea asp-for="SIGRemarks" class="form-control"></textarea>
                <span asp-validation-for="SIGRemarks" class="text-danger"></span>
            </div>

            <div class="form-group btn-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
