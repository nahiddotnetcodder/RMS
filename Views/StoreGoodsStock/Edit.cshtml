@model RMS.Models.StoreGoodsStock

@{
    ViewData["Title"] = "Store & Inventory > Inquiries & Reports > Item Stock > Edit Item Stock";
}
<h6 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h6>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SGSId" />

             <div class="form-group">
                <label asp-for="SIGId" class="control-label"></label>
                <select asp-for="SIGId" class="form-control" asp-items="ViewBag.storeIGen"></select>
                <span asp-validation-for="SIGId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SGSQty" class="control-label"></label>
                <input asp-for="SGSQty" class="form-control" />
                <span asp-validation-for="SGSQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SGSUPrice" class="control-label"></label>
                <input asp-for="SGSUPrice" class="form-control" />
                <span asp-validation-for="SGSUPrice" class="text-danger"></span>
            </div>
            <div class="form-group btn-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
