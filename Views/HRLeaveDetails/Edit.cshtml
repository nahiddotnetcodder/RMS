@model RMS.Models.HRLeaveDetail
@{
    ViewData["Title"] = "Human Resource (HR) >  Operations > Leave Details > Edit Leave Details";
}
<h6 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h6>
<hr />
<div class="row">
    <!-- Form Area-->
    <form asp-action="Edit" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="HRLDId" />
        <div class="btn-group">
            <div class="col-md-12">
                <div class="row">
                    <!-- controls section -->
                    <div class="form-group col-6">
                        <label asp-for="HREDId" class="control-label"></label>
                        <select asp-for="HREDId" class="form-control" asp-items="ViewBag.EmpDetails"></select>
                        <span asp-validation-for="HREDId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLPId" class="control-label"></label>
                        <select asp-for="HRLPId" class="form-control" asp-items="ViewBag.LeavePolicy"></select>
                        <span asp-validation-for="HRLPId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDAppSl" class="control-label"></label>
                        <input asp-for="HRLDAppSl" class="form-control" />
                        <span asp-validation-for="HRLDAppSl" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDAppDate" class="control-label"></label>
                        <input asp-for="HRLDAppDate" class="form-control" />
                        <span asp-validation-for="HRLDAppDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDLeaveSDate" class="control-label"></label>
                        <input asp-for="HRLDLeaveSDate" class="form-control" />
                        <span asp-validation-for="HRLDLeaveSDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDLeaveEDate" class="control-label"></label>
                        <input asp-for="HRLDLeaveEDate" class="form-control" />
                        <span asp-validation-for="HRLDLeaveEDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDReason" class="control-label"></label>
                        <textarea asp-for="HRLDReason" class="form-control"></textarea>
                        <span asp-validation-for="HRLDReason" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HREDIdSu" class="control-label"></label>
                        <input asp-for="HREDIdSu" class="form-control" />
                        <span asp-validation-for="HREDIdSu" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="HRLDTDay" class="control-label"></label>
                        <input asp-for="HRLDTDay" class="form-control" />
                        <span asp-validation-for="HRLDTDay" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group btn-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="index"
               asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
