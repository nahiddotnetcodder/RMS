@model List<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">Roles</h2>
		</div>
        <div class="col-2 text-end">
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus-circle"></i> &nbsp; Create Role
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Role Name
			</th>
            <th>
                Description
			</th>
            <th>
                Current Status
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.RoleName
				</td>
                <td>
                    @obj.Description
				</td>
                <td>
                    @obj.CurrentStatusName
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>