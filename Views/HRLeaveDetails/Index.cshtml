@model IEnumerable<RMS.Models.HRLeaveDetail>
@{
    ViewData["Title"] = "Human Resource (HR) >  Operations > Leave Details > Leave Details List";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pager = ViewBag.Pager;
    int i = 1;
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
<div class="container-fluid btn-group">
    <div class="col-10">
        <h6 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h6>
    </div>
    <div class="col-2 justify-content-end">
        <p class="pb-3">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>
<table class="table table-striped border m-0">
    <thead>
        <tr>
            <th>
                SL
            </th>
            <th>
                <i class="@sortModel.GetColumn("HREmpDetails").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HREmpDetails").SortExpression">
                    @Html.DisplayNameFor(model => model.HREmpDetails.HREDEName)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HRLeavePolicy").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLeavePolicy").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLeavePolicy.HRLPName)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HRLDAppSl").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDAppSl").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDAppSl)
                </a>
            </th>

            <th>
                <i class="@sortModel.GetColumn("HRLDAppDate").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDAppDate").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDAppDate)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HRLDLeaveSDate").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDLeaveSDate").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDLeaveSDate)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HRLDLeaveEDate").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDLeaveEDate").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDLeaveEDate)
                </a>
            </th>
            @*<th>
                <i class="@sortModel.GetColumn("HRLDReason").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDReason").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDReason)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HREDIdSu").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HREDIdSu").SortExpression">
                    @Html.DisplayNameFor(model => model.HREDIdSu)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("HRLDTDay").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("HRLDTDay").SortExpression">
                    @Html.DisplayNameFor(model => model.HRLDTDay)
                </a>
            </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.HREmpDetails.HREDEName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLeavePolicy.HRLPName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLDAppSl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLDAppDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLDLeaveSDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLDLeaveEDate)
                </td>
               @* <td>
                    @Html.DisplayFor(modelItem => item.HRLDReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HREDIdSu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLDTDay)
                </td>*@
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.HRLDId">
                            <span class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>
                     <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.HRLDId">
                            <span class="btn btn-sm btn-dark">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a asp-action="Delete" asp-route-id="@item.HRLDId">
                        <span class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </span>
                        </a>
                    </div>                   
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}


