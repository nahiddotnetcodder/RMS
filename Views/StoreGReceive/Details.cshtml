@model RMS.Models.StoreGReceive
@{
    ViewData["Title"] = "Store & Inventory > Item Movement > Item Receive > Item Details";
}

<h6 style="color: #1275AE; margin: 10px;">@ViewData["Title"]</h6>

<form asp-action="Details">
    <div class="row border m-2">
        <div class="col-md-8 m-auto p-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GRDate" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GRDate" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SIGId" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StoreIGens.SIGItemName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SCId" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StoreCategory.SCName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SSCId" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StoreSCategory.SSCName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SUId" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StoreUnit.SUName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GRUPrice" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GRUPrice" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GRQty" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GRQty" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GRTPrice" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GRTPrice" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GRRemarks" class="control-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="GRRemarks" class="form-control" readonly ></textarea>
                </div>
            </div>


            <div class="form-group btn-group">
                <a class="btn btn-success" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">
                    <i class="fas fa-arrow-left"></i>
                    Back To List
               </a>
            </div>
        </div>
    </div>

</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
