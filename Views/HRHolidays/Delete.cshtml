@model RMS.Models.HRHolidays
@{
    ViewData["Title"] = "Human Resource (HR) > Operations > Holidays > Delete Holiday";
}
<h5 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h5>
<div>
    <h5 class="text-danger">Are you sure you want to delete this?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HRHName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HRHName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HRHStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=> model.HRHStartDate)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HRHEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=> model.HRHEndDate)
        </dd>

    </dl>
    <form asp-action="Delete">
        <div class="text-danger btn-group" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="HRHId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="index"
           asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}