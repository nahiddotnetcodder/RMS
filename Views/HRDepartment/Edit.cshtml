@model RMS.Models.HRDepartment
@{
    ViewData["Title"] = "Human Resource (HR) > Maintenance > Department > Edit Department";
}
<h6 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HRDId" />
            <div class="form-group">
                <label asp-for="HRDName" class="control-label"></label>
                <input asp-for="HRDName" class="form-control" />
                <span asp-validation-for="HRDName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HRDDes" class="control-label"></label>
                <input asp-for="HRDDes" class="form-control" />
                <span asp-validation-for="HRDDes" class="text-danger"></span>
            </div>
            <div class="form-group btn-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="index"
                   asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
