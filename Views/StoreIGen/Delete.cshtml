@model RMS.Models.StoreIGen

@{
    ViewData["Title"] = "Store & Inventory > Maintenance > Item Generation > Delete Item Generation";
}
<h5 style="color: #1275AE; margin-top: 10px;">@ViewData["Title"]</h5>
<div>
    <h5 class="text-danger">Are you sure you want to delete this?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SCId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreCategory.SCName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SSCId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreSCategory.SSCName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SUId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreUnits.SUName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SIGItemCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SIGItemCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SIGItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SIGItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SIGRLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SIGRLevel)
        </dd>

    </dl>

    <form asp-action="Delete">
        <div class="text-danger btn-group" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="SIGId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="index"
           asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}